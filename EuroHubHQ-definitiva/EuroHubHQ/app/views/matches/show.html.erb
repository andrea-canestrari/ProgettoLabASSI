<div class="mx-auto md:w-2/3 w-full flex ">
  <div class="mx-auto items-center">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render partial: "match_details", locals: { match: @match } %>

    <div class="items-center text-align-center">
      <%= link_to "Back to matches", matches_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>
