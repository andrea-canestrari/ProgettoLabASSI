<div class="w-full p-4 md:2-1/3">
  <%= link_to match_path(match), class: "block w-full bg-gray-100 hover:bg-gray-200 hover:shadow-lg transition-shadow duration-400  rounded-lg pb-10 mb-5" do %>
      <div class="flex items-center justify-between p-4">
        <%= image_tag "#{match.team1}.png", alt: "Bandiera di #{match.team1}", class: "h-12 w-18" %>
        <%= image_tag "#{match.team2}.png", alt: "Bandiera di #{match.team2}", class: "h-12 w-18" %>
      </div>
      <div class="team-names text-center mb-2 font-semibold">
        <span><%= match.team1 %></span> vs <span><%= match.team2 %></span>
      </div>
      <div class="scores text-center mb-2">
        <span>Score: <%= match.score1 %> - <%= match.score2 %></span>
      </div>
    <% end %>
</div>