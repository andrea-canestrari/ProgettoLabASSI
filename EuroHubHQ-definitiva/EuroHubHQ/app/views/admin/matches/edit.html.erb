<% if @admin_match.errors.any? %>
  <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
    <h2><%= pluralize(@match.errors.count, "error") %> Prohibited this match from being saved:</h2>
    <ul>
      <% @match.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing match</h1>

  <%= render "form", admin_match: @admin_match %>
  <div class="inline-block ml-2">
      <%= link_to "Back to matches", admin_matches_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
</div>

 